# Database
# For local PostgreSQL:
# DATABASE_URL=postgresql://username:password@localhost:5432/dbname
#
# For cloud PostgreSQL (AWS RDS, DigitalOcean, etc.) - add SSL parameters:
DATABASE_URL=postgresql://username:password@host:5432/dbname?sslmode=no-verify

# JWT Secret (used with jose for access token signing)
JWT_ACCESS_SECRET=your-super-secret-jwt-key-change-this-in-production

# Gmail SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Application URL
NEXT_PUBLIC_APP_URL=http://localhost:3000

# S3
AWS_ACCESS_KEY_ID=xxx
AWS_SECRET_ACCESS_KEY=xxx
AWS_REGION=us-east-2
AWS_S3_BUCKET_NAME=xxx
CLOUDFRONT_PRIVATE_KEY=xxxx
CLOUDFRONT_DOMAIN=xxxx
CLOUDFRONT_KEY_PAIR_ID=xxxxx
# Cookies are scoped to the narrowest possible shared domain between the CDN and the application
CLOUDFRONT_COOKIE_DOMAIN=.example.com

# LLM
LLM_API_KEY=xxx
GOOGLE_API_KEY=xxxx
FAL_API_KEY=xxx
FAL_ADMIN_KEY=xxx

# Auth cookie domain — set to the parent domain (e.g. .moodio.art) in production
# so auth cookies are shared across subdomains (app.moodio.art, admin.moodio.art).
# Leave unset for local development (cookies will be scoped to localhost).
AUTH_COOKIE_DOMAIN=.example.com

# Annotation platform URL — where the "Annotation Platform" button redirects to
NEXT_PUBLIC_ANNOTATION_PLATFORM_URL=https://admin.moodio.art/admin/browse-shots-admin

# Others
MAINTENANCE_MODE=false

NEXT_PUBLIC_FLASK_URL=xxx
NEXT_PUBLIC_CLOUDFRONT_URL=xxx

# Realtime collaboration (WebSocket server)
# URL for the Go realtime server (used by the frontend to connect)
# In development, the Go server runs on localhost:8081
# In production, configure your reverse proxy to route /ws/* to the Go server
NEXT_PUBLIC_WS_URL=ws://localhost:8081
# Base URL that the Go server uses to call the Next.js API for permission checks
PERMISSION_API_BASE=http://localhost:3000